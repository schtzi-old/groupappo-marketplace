<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>All your bookings</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">ID</th>
      <th scope="col">Customer</th>
      <th scope="col">Bike</th>
      <th scope="col">Overall price</th>
      <th scope="col">Status</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each_with_index do |booking, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= booking.id %></td>
        <td><%= booking.user.first_name %></td>
        <td><%= link_to booking.products.first.name, owner_product_path(booking.products.first) %></td>
        <td><%= booking.price %></td>
        <td><%= render 'shared/status', booking_status: booking.booking_status %></td>
        <td class="d-flex">
          <%= link_to owner_booking_path(booking) do %>
            <i class="fa-regular fa-folder-open me-3"></i>
          <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
