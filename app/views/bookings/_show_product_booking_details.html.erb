<div class="container rounded text-center">
      <div class="card rounded col-5 p-2 w-100 shadow">
        <h4 class="px-4 py-2 fw-bold text-center">Booking Details</h4>
        <div class="px-4 pt-0 text-muted">
          <p>Dates: <%= @booking.start_date.strftime('%d/%m') %> - <%= @booking.end_date.strftime('%d/%m') %></p>
          <p>Total days: <%= @booking.booking_days %> days</p>
        </div>
        <div class="border-bottom mx-3"></div>
        <div class="px-4 pt-2">
          <p>Your items:</p>
            <ul class="list-group">
              <% @booking.products.each do |product_assignment| %>
                    <li class="list-inline-item m-0">
                      <div class="d-flex justify-content-between">
                        <p><%= product_assignment.category.capitalize %></p>
                        <%= link_to product_assignment, :method => :delete do %>
                        <%# NEED TO UPDATE THIS LINK TO DELETE PRODUCT ASSIGNMENT %>
                          <i class="fa-solid fa-trash dark"></i>
                        <% end %>
                        <p>$<%= product_assignment.price.round(0) %></p>
                      </div>
                    </li>
              <% end %>
            </ul>
        </div>
        <div class="border-bottom mx-3"></div>
        <div class="px-4 pt-2 pb-0">
          <div class="d-flex justify-content-between">
            <p>Per day</p>
            <p>$<%= (@product.price).round(0) %></p>
          </div>
        </div>
        <div class="border-bottom mx-3"></div>
        <div class="px-4 pt-2 pb-0">
          <div class="d-flex justify-content-between pt-2 pb-0">
            <p>Total price</p>
            <p>$<%= (@booking.price).round(0) %></p>
          </div>
        </div>
      </div>
    </div>
