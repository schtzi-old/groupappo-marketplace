<div class="container my-5 overflow-hidden">
  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% products = Product.all %>
  <% products.each do |product| %>
    <% if product.product_type != "bikes" %>
        <div class="col">
          <div class="p-3 border bg-light">
            <img src="https://www.ghost-bikes.com/fileadmin/user_upload/ghostbikes_2020/BIKES/65SL1008_PY19_SLAMR_4-7_AL_U_CLASSICTAN_JETBLACK.png"
                  class="img-fluid rounded-start" alt="..." height="100px">
            <h3> <%= product.name %> </h3>
            <p> <%= product.product_type %> </p>
            <p> <%= product.description %> </p>
          </div>
        </div>
    <% end %>
  <% end %>
  </div>
</div>
