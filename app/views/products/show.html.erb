<%= render "products/main_product_card", product: @product %>

<% current_bookings = @product.bookings.filter{ |booking| booking.booking_status == "draft" && current_user == booking.user } %>

<% if current_bookings.length > 0  %>
  <h2 class="px-3 pb-0"> Accessories available from <%= @product.user.first_name.capitalize %> <%= @product.user.last_name.capitalize %></h2>
  <%= render "acc_card", product: @product %>
<% end %>
