<div class="card mb-3 mx-auto p2 me-3 shadow-sm" style="max-width: 600px; height:250px" data-category="<%= product.category %>">
  <div class="row g-0 overflow-hidden m-2" >
    <div class="col-md-6">
      <% unless product.photo.blank? %>
        <%= cl_image_tag product.photo.key, height: 175, width: 280, crop: :fill, class: "mb-3" %>
      <% else %>
        <img src="https://res.cloudinary.com/drmzvuqzo/image/upload/c_pad,b_auto:predominant,fl_preserve_transparency/v1669322135/development/4-no-image--410x250_dljpif.jpg" class="img-fluid rounded-start mb-3" alt="...">
      <% end %>

      <%= link_to "View Product Details", product, { class: "btn btn-primary" } %>
    </div>
    <div class="col-md-6">
      <div class="card-body overflow-hidden">
        <h5 class="card-title"><%=product.name%></h5>
        <p class="card-text"><small class="text-muted"><%=product.category%></small></p>
        <p class="card-text overflow-hidden" style="height: 050px;"><%=product.description%></p>


          <div class="row g-0 overflow-hidden text-end pe-3" >
            <h3>$<%=product.price.round(0)%></h3><p> per Day</p>

          </div>

      </div>
    </div>
  </div>
</div>
