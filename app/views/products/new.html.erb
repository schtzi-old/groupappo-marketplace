<%= simple_form_for(@product) do |f| %>
  <%=  f.input :category, collection: Product::CATEGORY_NAME  %>
  <%=  f.input :product_type, collection: Product::PRODUCT_TYPE_NAME  %>
  <%=  f.input :name  %>
  <%=  f.input :description  %>
  <%=  f.input :price  %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
